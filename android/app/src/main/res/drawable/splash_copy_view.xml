<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_top_effect"
        />

    <ImageView
        android:layout_marginTop="60dp"
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        android:padding="15dp"
        android:src="@drawable/admin_launcer_icon"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/logo"
        android:layout_toEndOf="@+id/logo"

        android:fontFamily="@font/poppins_regular"
        android:text="InVoc"
        android:textColor="@android:color/black"
        android:textSize="42sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:id="@+id/slogan"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="#3C285C"
            android:textSize="42sp"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <FrameLayout
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="113.182dp"
                    android:layout_height="83dp"
                    android:background="@drawable/green_elipse"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:src="@drawable/a"
                    android:layout_gravity="end"
                    android:layout_marginEnd="-8dp"
                    android:layout_marginTop="-8dp"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_shape"
                android:elevation="8dp"
                android:layout_centerInParent="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:text="vs"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#3C285C"
                    android:textSize="18sp"
                    />

            </FrameLayout>


            <FrameLayout
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="-16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="113.182dp"
                    android:layout_height="83dp"
                    android:background="@drawable/red_elipse"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:src="@drawable/b"
                    android:layout_gravity="start"
                    android:layout_marginStart="-8dp"
                    android:layout_marginTop="-8dp"
                    />
            </FrameLayout>

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>